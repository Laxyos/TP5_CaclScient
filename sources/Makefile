###############################################################################
SHELL = /bin/sh
FORTRAN= gfortran
LOADER= gfortran
###############################################################################
# Les fichiers a compiler
###############################################################################
FILES1 = fcts.f subrouts.f
FILES2 = ecrit.f
#
FFILES = $(FILES1) $(FILES2)
OFILES = $(FFILES:.f=.o)
###############################################################################
# Les commandes de make
###############################################################################
default:transport
###############################################################################
transport:	$(OFILES) main.o 
	$(LOADER) -o ../transport main.o  $(OFILES) 
###############################################################################
# Les clean
###############################################################################
clean:
	(rm -f *.o)
	(rm -rf ../transport ../transport.exe *.f.backup *.f~ ../*.plt)
	(rm -rf data)
	(mkdir data)	
.f.o:
	$(FORTRAN)  -c $<
###############################################################################

